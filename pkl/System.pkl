@go.Package { name = "github.com/mikea/declix/pkl" }
module mikea.declix.System

import "package://pkg.pkl-lang.org/pkl-go/pkl.golang@0.7.0#/go.pkl" 

target: SshConfig
resources: Listing<Resource>

open class Resource {
    // type: String
}

class Package extends Resource {
    type: "apt"
    name: String
    status: "installed" | "missing"
}

class File extends Resource  {
    type: "file"
    path: String
}

class SshConfig {
    address: String
    user: String
    privateKey: String
}