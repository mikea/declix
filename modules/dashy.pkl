    webSearch: WebSearch?
    backgroundImg: String?
    enableFontAwesome: Boolean?
    enableMaterialDesignIcons: Boolean?
    fontAwesomeKey: String?
    faviconApi: String?
    auth: Auth?
    defaultIcon: String?
