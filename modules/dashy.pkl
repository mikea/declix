class DashyConfig {
    pageInfo: PageInfo
    sections: Listing<Section>?
    appConfig: AppConfig?

    function render(): String = new YamlRenderer{}.renderDocument(this)
}

class PageInfo {
    title: String
    description: String?
    footerText: String?
    logo: String?

    navLinks: Listing<NavLink>?
}

class NavLink {
    title: String
    path: String
    target: String?
}

class Section {
    name: String
    icon: String?
    items: Listing<Item>
    widgets: Listing<Widget>
    displayData: DisplayData?
}

class Item {
    title: String
    description: String?
    url: String
    icon: String?
    target: String?
    hotkey: UInt(this <= 9)?
    tags: Listing<String>?
    statusCheck: Boolean?
    statusCheckUrl: String?
    statusCheckHeaders: Mapping<String, String>?
    statusCheckAllowInsecure: Boolean?
    statusCheckAcceptCodes: String?
    statusCheckMaxRedirects: UInt?
    color: String?
    rel: String?
    backgroundColor: String?
    provider: String?
    displayData: DisplayData?
}

