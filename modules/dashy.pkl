    iconSize: String?
    colCount: UInt?
    theme: String?
    cssThemes: Listing<String>?
    customColors: CustomColors?
    externalStyleSheet: (String | Listing<String>)?
    customCss: String?
    hideComponents: HideComponents?
    routingMode: String?
    enableMultiTasking: Boolean?
    workspaceLandingUrl: String?
    preventWriteToDisk: Boolean?
    preventLocalSave: Boolean?
    disableConfiguration: Boolean?
    disableConfigurationForNonAdmin: Boolean?
    widgetsAlwaysUseProxy: Boolean?
    showSplashScreen: Boolean?
    enableErrorReporting: Boolean?
    sentryDsn: Boolean?
