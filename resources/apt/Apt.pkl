@go.Package { name = "mikea/declix/resources/apt" }
abstract module mikea.declix.resources.apt

import "package://pkg.pkl-lang.org/pkl-go/pkl.golang@0.8.0#/go.pkl" 
import "../Resources.pkl"
import "../dpkg/Dpkg.pkl"

class Package extends Resources.Resource {
    type: "apt"
    name: String
    state: Dpkg.State
    updateBeforeInstall: Boolean = false

    fixed id: String = type + ":" + name
}

function install(names: Listing<String>): Listing<Resources.Resource> = new Listing {
    for (pkg in names) {
        new Package {
            name = pkg
            state = "installed"
        }
    }
}

function remove(names: Listing<String>): Listing<Resources.Resource> = new Listing {
    for (pkg in names) {
        new Package {
            name = pkg
            state = "missing"
        }
    }
}